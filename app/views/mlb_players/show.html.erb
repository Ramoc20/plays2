<h1><%= @mlb_player.name %></h1>
<h2><%= @mlb_player.position %></h2>

<h4>Personal Information</h4>
<ul class="list-group">
  <li class="list-group-item"><strong>Age:</strong> <%= @mlb_player.date_of_birth.strftime("%B %d, %Y") %> (Age: <%= current_age(@mlb_player.date_of_birth) %>)</li>
  <li class="list-group-item"><strong>Team:</strong> <%= @mlb_player.team %></li>
  <li class="list-group-item"><strong>Salary:</strong> <%= number_to_currency(@mlb_player.salary, precision: 0, delimiter: ',') %></li>
</ul>
